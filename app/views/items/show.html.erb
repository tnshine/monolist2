<% content_for :head do %>
<title>【欲しい】<%= @item.title %>【持ってる】</title>
<meta name="description" content="<%= @item.title %>が欲しいなら「Want」、持ってるなら「Have」しよう！">
<% end %>
<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
          <% unless @item.large_image.nil? %>
            <img src="<%= @item.large_image %>" alt="<%= @item.title %>">
          <% else %>
            <%= image_tag("no-image.png" , alt: @item.title) %>
          <% end %>
        </div>
      </div>
      <div class="title">
        <%= @item.title %>
      </div>
      <%= render 'action' , item: @item %>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Haveしたユーザー</h4>
        <div class="side-box-body">
          <% @item.have_users.each do |user| %>
            <%= link_to gravatar_for(user, size: 20), user, class: "gravatar" %>
          <% end %>
        </div>
      </div>
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー</h4>
        <div class="side-box-body">
          <% @item.want_users.each do |user| %>
            <%= link_to gravatar_for(user, size: 20), user, class: "gravatar" %>
          <% end %>
        </div>
      </div>
      <div class="text-center">
        <%= link_to ('楽天詳細ページへ'), @item.detail_page_url, target: "_blank" %>
      </div>
    </div>
  </div>
</div>
